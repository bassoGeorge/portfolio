{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowUnusedLabels": false,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}

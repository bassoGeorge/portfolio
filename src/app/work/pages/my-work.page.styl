main
  width: 100%

.projects-container
  height: 350px
  height: 60vh
  position: relative;

.work-grid-container
  height: 100%
  display: flex
  flex-direction: column
  justify-content: space-between

.work-grid
  width: 100%
  height: calc(100% - 70px)
  display: grid
  grid-template-rows: repeat(10, 1fr)
  grid-template-columns: repeat(4, 1fr)
  grid-auto-flow: column
  grid-column-gap: 15px
  grid-row-gap: 15px

project-details
  position: absolute
  left: 0
  top: 0
  height: 100%
  width: 100%

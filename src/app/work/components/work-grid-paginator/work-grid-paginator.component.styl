:host
  display: flex
  justify-content: center
  align-items: center

.work-grid-paginator-btn
  cursor: pointer

  &.previous-page-btn,
  &.next-page-btn
    height: 1.5em
    &:hover
      ::ng-deep svg
        animation: pulse 500ms

.page-num-btn-container
  display: flex
  align-items: center
  position: relative
  padding: 1px
  margin-right: 2em
  margin-left: 2em

  .page-num-separator
    position: absolute
    height: 4px
    width: 100%
    top: calc(50% - 2px)
    border-radius: 2px


.page-num-btn
  $mDiff = 10
  $size = 14px
  display: inline-block
  margin-left: ($mDiff)px
  margin-right: ($mDiff)px
  height: $size
  width: $size
  border-style: solid
  border-width: 3px
  border-radius: 50%
  transition: all 300ms ease-in-out
  &.active
    transform: scale(1.5)
  &.first
    margin-left: ($mDiff * 2)px
  &.last
    margin-right: ($mDiff * 2)px

.page-num-separator
  height: 0
  width: 20px

nav
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: 10rem
  padding-left: 5rem
  padding-right: 5rem
  display: flex
  justify-content: space-between
  align-items: center

.navigation--pages
  li
    margin-left: 0

  a
    margin-left: 0.5em
    position: relative
    font-size: 2.2rem
    text-decoration: none
    display: flex
    align-items: center
    overflow: hidden
    width: 2em
    transition: all 400ms ease-in-out
    span
      margin-left: 0.6em
      height: 1em
      // visibility: hidden
      position: relative
    img
      height: 1.4em

  a.page-link-active
    width: 6em
    span
      // visibility: visible

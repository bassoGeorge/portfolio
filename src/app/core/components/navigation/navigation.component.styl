nav
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: 10rem
  padding-left: 5rem
  padding-right: 5rem
  display: flex
  justify-content: space-between
  align-items: center

.navigation--pages
  li
    margin-left: 0

  a
    opacity: 0.9
    margin-left: 3rem
    position: relative
    font-size: 2.2rem
    text-decoration: none
    display: flex
    align-items: center
    overflow: hidden
    width: 1.8em
    transition: all 350ms ease-in-out
    span
      white-space: nowrap
      margin-left: 0.6em
      position: relative
    img
      max-height: 1.4em

  a.page-link-active
    opacity: 1
    width: 5em
  a:hover
    // transform: scale(1.03);
    opacity: 1


#page-nav-link-my-work.page-link-active
  width: 6.5em

#page-nav-link-contact-me.page-link-active
  width: 8em

@require "~styles/_utils"
main
  width: 100%
  min-height: 100%
  display: flex
  flex-direction: column
  justify-content: space-between

  .skills-canvas
    height: 100%
    max-height: 500px
    width: 100%
    max-width: $breakpoints.tablet-portrait
    margin-left: auto
    margin-right: auto
    flex-grow: 1
    position: relative

  .my-head-container
    position: absolute
    bottom: 0
    width: 100%
    text-align: center

    img
      width: 100px
      +on-tablet-up()
        width: 25%
      +on-desktop-up()
        width: 30%
        max-width: 300px

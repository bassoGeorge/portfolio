/***************************************************************************/
/*                             Site wide styles                            */
/***************************************************************************/

@require "./_fonts.css"
@require "./_typography"

*
  box-sizing: border-box;

html
  height: 100%

body
  height: 100%
  padding: 1em
  padding-bottom: calc(100px + 1em) // On account of the navigation item

a.button,
button
  border-radius: 2px
  border: 1px solid
  background: transparent
  padding: 5px 25px
  cursor: pointer


ul.horizontal-flat-list
  list-style-type: none
  padding-left: 0
  li
    display: inline-block
    margin-right: 30px;


.centered-container
  height: 100%
  width: 100%
  display: flex
  justify-content: stretch
  align-items: center
  padding: 0 120px

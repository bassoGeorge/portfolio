/***************************************************************************/
/*                             Site wide styles                            */
/***************************************************************************/

@require "./_fonts.css"

*
  box-sizing: border-box;

html
  height: 100%
  font-size: 62.5%

body
  height: 100%
  padding: 1rem
  padding-bottom: calc(10rem + 1rem) // On account of the navigation item

@require "./_typography"


a.button,
button
  border-radius: 2px
  border: 1px solid
  background: transparent
  padding: 5px 25px
  cursor: pointer


ul.horizontal-flat-list
  list-style-type: none
  padding-left: 0
  li
    display: inline-block
    margin-right: 3rem;


.centered-container
  height: 100%
  width: 100%
  display: flex
  justify-content: stretch
  align-items: center
  padding: 0 120px

/***************************************************************************/
/*                             Site wide styles                            */
/***************************************************************************/

@require "./_fonts.css"

*
  box-sizing: border-box;

html
  height: 100%
  font-size: 62.5%

body
  font-size: 1.6rem
  height: 100%
  padding: 1rem
  padding-bottom: calc(10rem + 1rem) // On account of the navigation item

@require "./_typography"
@require "./_forms"


a.button,
button
  border-radius: 2px
  border: 1px solid
  background: transparent
  padding: 5px 25px
  cursor: pointer
  font-size: 2.2rem
  transition all 300ms ease-in-out


ul.horizontal-flat-list
  list-style-type: none
  padding-left: 0
  li
    display: inline-block
    margin-left: 3rem;

  li:first-child
    margin-left: 0


.centered-container
  height: 100%
  width: 100%
  display: flex
  justify-content: stretch
  align-items: center
  padding: 0 120px

.at-ends-container
  display: flex
  justify-content: space-between

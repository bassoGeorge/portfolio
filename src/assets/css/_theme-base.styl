/***************************************************************************/
/*   All the classes required by the application which will impart color   */
/***************************************************************************/

$danger-color = red

for name, color in $bg-colors
  .bg-{name}
    background-color: color

for name, color in $fg-colors
  .fg-{name}
    color: color

  .bdr-{name}
    border-color: color

for name, color in $accent-colors
  .bg-acc-{name}
    background-color: color

  .fg-acc-{name}
    color: color

  .bdr-acc-{name}
    border-color: color

  .fill-acc-{name}
    fill: color

.bg-danger
  background-color: $danger-color

.fg-danger
  color: $danger-color

.bdr-danger
  border-color: $danger-color

.bdr-empty
  border-color: transparent

/* Now we set some very basic colors */
body
  @extend .bg-primary;
  @extend .fg-primary;


a
  @extend .fg-acc-primary;
  // TODO: add hover and other effects

h1,h2
  @extend .fg-acc-primary;


button,
a.button
  @extend .fg-acc-primary
  @extend .bdr-acc-primary

button:hover, button:active,
a.button:hover, a.button:active
  @extend .bg-acc-primary
  @extend .fg-inverse

input,
textarea
  @extend .fg-primary
  @extend .bdr-primary

input:focus,
textarea:focus
  @extend .fg-acc-primary
  @extend .bdr-acc-primary

input.ng-touched.ng-invalid,
textarea.ng-touched.ng-invalid
  @extend .bdr-danger

.svg-active-acc
  svg
    .shadable-fill
      @extend .fill-acc-primary

.work-grid-separator::after
  @extend .bdr-acc-primary
